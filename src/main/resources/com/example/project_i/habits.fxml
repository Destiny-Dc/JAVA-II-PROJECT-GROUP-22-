<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="1032.0" prefWidth="766.0" style="-fx-background-color: violet;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project_i.HabitController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Title -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Habit Tracker" />

    <!-- Input Fields -->
    <GridPane hgap="10" prefHeight="132.0" prefWidth="502.0" vgap="10">
        <Label text="Habit Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="habitField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Start Date:" GridPane.rowIndex="2" />
        <DatePicker fx:id="startDatePicker" prefHeight="25.0" prefWidth="261.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Status:" GridPane.rowIndex="3" />
        <ChoiceBox fx:id="statusChoiceBox" prefHeight="25.0" prefWidth="263.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <!-- Buttons -->
        <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <Button onAction="#handleDeleteHabit" prefHeight="25.0" prefWidth="87.0" style="-fx-background-color: red; -fx-text-fill: white;" text="Delete Habit" GridPane.columnIndex="2" GridPane.rowIndex="3">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
         <Button onAction="#handleUpdateHabit" style="-fx-background-color: blue; -fx-text-fill: white;" text="Update Habit" GridPane.columnIndex="2" GridPane.rowIndex="2">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
         <Button onAction="#handleAddHabit" prefHeight="25.0" prefWidth="87.0" style="-fx-background-color: green; -fx-text-fill: white;" text="Add Habit" GridPane.columnIndex="2">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints maxHeight="25.0" minHeight="2.0" prefHeight="25.0" />
         <RowConstraints maxHeight="23.0" minHeight="0.0" prefHeight="0.0" />
         <RowConstraints maxHeight="25.0" minHeight="6.0" prefHeight="25.0" />
         <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0" />
         <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
      </rowConstraints>
    </GridPane>
   <VBox />

    <!-- Table View -->
    <TableView fx:id="habitTableView" prefHeight="240.0" prefWidth="623.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
            <TableColumn fx:id="habitNameColumn" prefWidth="311.0" text="Habit Name" />
            <TableColumn fx:id="startDateColumn" prefWidth="193.0" text="Start Date" />
            <TableColumn fx:id="statusColumn" prefWidth="168.0" text="Status" />
        </columns>
    </TableView>

    <!-- Pie Chart -->
    <PieChart fx:id="habitPieChart" prefHeight="341.0" prefWidth="570.0" title="Habits Status Distribution" />

          <!-- Back Button -->
    <Button alignment="CENTER" onAction="#handleBack" prefHeight="31.0" prefWidth="113.0" style="-fx-background-color: black; -fx-text-fill: white;" text="Back">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </Button>
</VBox>
